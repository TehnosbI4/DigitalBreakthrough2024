@page
@model IndexModel
@{
    ViewData["Title"] = "RZD-Recognise";
}

<div class="d-flex flex-row justify-content-around">
    <form method="post" class="p-2 flex-fill bd-highlight">
        <div class="form-group row">
            <label asp-for="UploadedFiles" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-7">
                <input asp-for="UploadedFiles" multiple class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-7 offset-sm-3">
                <button class="btn btn-light"  style="margin: 7px" id="submit">Submit</button>
            </div>
        </div>
    </form>
</div>

@section scripts{ 
    <script>
        $(function () {
            $('#submit').on('click', function (evt) {
                evt.preventDefault();
                $.ajax({
                    url: '',
                    data: new FormData(document.forms[0]),
                    contentType: false,
                    processData: false,
                    type: 'post',
                    success: function () {
                        alert('Добавлено на обработку файлов: '+document.forms[0].length);
                    }
                });
            });
        });

    </script>
}