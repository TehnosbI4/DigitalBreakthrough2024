@section scripts{
    <script>
        $(function () {
            $('#submit').on('click', function (evt) {
                evt.preventDefault();
                $.ajax({
                    url: '',
                    data: new FormData(document.forms[0]),
                    contentType: false,
                    processData: false,
                    type: 'post',
                    success: function (result) {
                        $("#grid").html(result);
                        alert('Аудиозаписи обработаны');
                    }
                });
            });
        });
        
        

        

    </script>
}